<table>
<tr><th>Nombre</th><th>Rotar</th></tr>
[% FOREACH articulo IN articulos %]
<tr>
  <td>[% articulo.nombre %]</td>
  <td>Cada:
    <input size='2' id='factor_[% articulo.articuloid %]' value="[% articulo.factorfrecuencia %]" />
    <select id='frecuencia_[% articulo.articuloid %]'>
    [% FOREACH frecuencia IN frecuencias %]
    <option value='[% frecuencia.id %]' [% IF frecuencia.id == articulo.frecuencia.id %] selected [% END %]>[% frecuencia.nombre %]</option>
    [% END %]
    </select>
    <button onclick="fijarFrecuencia([% articulo.articuloid %])">Fijar rotaci√≥n</button></td>
</tr>
[% END %]
</table>
<script>
  function fijarFrecuencia(articuloid)
  {
    var vFrecuencia = $('#frecuencia_'+articuloid).val();
    var vFactor = $('#factor_'+articuloid).val();

    $.ajax({
      url:"/articulos/rotacion",
      data:{articulo:articuloid, frecuencia:vFrecuencia, factor:vFactor},
      success:function(resp){
        alert(resp);
      }
    });
  }
</script>
